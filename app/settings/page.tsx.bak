import Container from "../components/Container";import WallpaperForm from "../components/WallpaperForm";export default function Settings(){  return (    <Container>      <section className="section">        <h1 className="sr-only">外观设置</h1>        <WallpaperForm />              <div className="card" style={{display:'grid', gap:12}}>          <div style={{fontWeight:600}}>上传壁纸</div>          <input type="file" accept="image/*" onChange={async (e)=>{ const f=e.target.files?.[0]; if(!f) return; const fd=new FormData(); fd.append("file", f); const r=await fetch("/api/upload?kind=wallpaper", { method: "POST", body: fd }); const d=await r.json(); if(r.ok){ await fetch('/api/config/wallpaper', { method:'POST', headers:{'Content-Type':'application/json'}, body: JSON.stringify({ url: d.upload.url, opacity: 0.35 }) }); alert('已上传并应用（待管理员审核）'); location.reload(); } else { alert(d.error||'上传失败'); } }} />          <div className="hint">管理员可在 /admin/uploads 审核用户上传的图片</div>        </div></section>    </Container>  );}